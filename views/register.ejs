<%- include('./_header.ejs');%>
<%- include('./_error_display.ejs');%>

<div class="container">
    <h1 class="h1">Register</h1>

    <form action="/register" method="POST">
        <!-- LAST NAME -->
        <div class="form-group">
            <label for="last_name">Last Name</label>
            <input type="text" class="form-control" name="last_name" id="last_name"
            <% if( data ){ %>
                value="<%= data.last_name %>"
            <%}%>

            placeholder="Enter last name">
        </div>
        <!-- FIRST NAME -->
        <div class="form-group">
            <label for="first_name">First name</label>
            <input type="text" class="form-control" name="first_name" id="first_name"
            <% if( data ){ %>
                value="<%= data.first_name %>"
            <%}%>
            placeholder="Enter first name">
        </div>

        <!-- DATE -->
        <div class="form-group">
            <label for="dOB">Date of birth</label>
            <input type="date" name="dOB" id="dOB">

            <!-- COUNTRY -->
            <label for="country">Country </label>
            <select name="country" id="country">
                <option>France</option>
                <option>Canada</option>
                <option>United-States</option>
                <option>England</option>
                <option>Mexico</option>
                <option>Africa</option>
                <option>Taiwan</option>
                <option>Spain</option>
                <option>Other</option>
            </select>
        </div>

        <!-- EMAIL ADRESS -->
        <div class="form-group">
            <label for="email_adress">Email address</label>
            <input type="email" class="form-control" name="email_adress" id="email_adress"
            <% if( data ){ %>
                value="<%= data.email_adress %>"
            <%}%>
            placeholder="Enter email adress">
        </div>

        <!-- PASSWORD -->
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Password must be at least 6 characters long">
        </div>

        <!-- PASSWORD CONFIRM -->
        <div class="form-group">
            <label for="exampleInputPassword1">Password confirm</label>
            <input type="password" class="form-control" name="password_confirm" id="passwordconfirm" placeholder="Confirm password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<%- include('./_footer.ejs');%>